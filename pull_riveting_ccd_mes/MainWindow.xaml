<Window x:Class="pull_riveting_ccd_mes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pull_riveting_ccd_mes"
        mc:Ignorable="d"
        Title="嘉善牛牛自动化科技有限公司" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <!-- 第一行高度固定 -->
            <RowDefinition Height="Auto"/>
            <!-- 第二行占满剩余空间 -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Text="扫码mes系统"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="Black"
                   Margin="10"
                   Grid.Row="0"/>

        <!-- 日志框 -->
        <TextBox x:Name="LogTextBox"
                 Margin="10"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 IsReadOnly="True"
                 FontFamily="Consolas"
                 FontSize="14"
                 Grid.Row="1"/>
    </Grid>

</Window>
